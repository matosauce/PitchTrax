<Page
    x:Class="PitchTrax.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Name="MainPanel"  Orientation="Horizontal" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel x:Name="PitcherPanel" Orientation="Vertical" MinWidth="600" Background="DimGray">
                <StackPanel Orientation="Horizontal" Margin="0,80,0,40">
                    <TextBlock Text="Pitchers" MinWidth="350" FontSize="40" TextAlignment="Left" Margin="5,0,0,0"/>
                    <Button Content="Add Pitcher" MinWidth="100" Margin="50,0,0,0" Click="AddPitcherButton_OnClick"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
    </StackPanel>
</Page>
